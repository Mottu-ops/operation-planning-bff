{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": "../",
  "testRegex": ".*\\.spec\\.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "collectCoverageFrom": [
    "**/*.(t|j)s",
    "!main.ts",
    "!config/**",
    "!**/types/**",
    "!**/*.dto.ts"
  ],
  "coveragePathIgnorePatterns": [".module.ts$", ".spec.ts$", ".e2e-spec.ts$"],
  "coverageDirectory": "../coverage",
  "testEnvironment": "node"
}
